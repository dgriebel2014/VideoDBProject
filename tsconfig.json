{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "strict": true,
    "sourceMap": true,
    "outDir": "./wwwroot/js",
    "rootDir": "./src",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": [ "@webgpu/types" ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@webgpu/types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}